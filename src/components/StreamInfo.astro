---
interface Props{
    info: {
    name: string;
    category: string;
    viewers: string;
    img: string;
    }
}

const { info } = Astro.props
---

<button class="px-1 py-1 hover:bg-zinc-700">
    <div class="flex flex-row justify-between items-center">
        <div class="flex flex-row gap-1 items-center">
            <img src={info.img} class="rounded-full" height="30px" width="30px">
            <div class="flex flex-col">
                <p class="text-white font-semibold">
                    {info.name}
                </p>
                <p class="text-zinc-500 text-sm">
                    {info.category}
                </p>
            </div>
            <div class="flex fle-row items-center gap-1">
                <div class="bg-red-600 h-[8px] w-[8px] rounded-full">
                </div>
                <span class="text-zinc-400">{info.viewers}</span>
            </div>
        </div>
    </div>
</button>